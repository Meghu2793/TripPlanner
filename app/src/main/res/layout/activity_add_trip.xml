<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.tripplanner.AddTripActivity">

    <EditText
        android:id="@+id/EnterTripName"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Trip Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSearchCity"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Search For City"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterTripName" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Search"
        app:layout_constraintStart_toEndOf="@+id/editTextSearchCity"
        app:layout_constraintTop_toBottomOf="@+id/EnterTripName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addTripSearchList"
        android:layout_width="319dp"
        android:layout_height="279dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearchCity">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/buttonAddTrip"
        android:layout_width="162dp"
        android:layout_height="48dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"
        android:text="AddTrip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripSearchList" />
</android.support.constraint.ConstraintLayout>
